@{
  var clients = (List<Clients>)ViewData["clients"];
  ViewData["title"] = "Client List";
}

<h2>@ViewData["title"]</h2>
<br>
<a href="/client/new1" class="btn btn-primary">Add New Client</a>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col" hidden >ID</th>
      <th scope="col">Salutation</th>
      <th scope="col">Name</th>
      <th scope="col">Gender</th>
      <th scope="col">Date Of Birth</th>
      <th scope="col">Primary Address</th>
      <th scope="col">Alternate Address</th>
      <th scope="col">Primary Contact Number</th>
      <th scope="col">Alternate Contact Number</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in clients)
    {
        <tr>
          <td hidden>@item.id</td>
          <td>@item.salutation</td>
          <td>@item.firstname @item.lastname</td>
          <td>@item.gender</td>
          <td>@item.dateofbirth</td>
          <td>@item.address1</td>
          <td>@item.address2</td>
          <td>@item.phone1</td>
          <td>@item.phone2</td>
          <td>@item.email</td>
          <td>
            <a href="/client/profile1?id=@item.id" class="btn btn-info">Profile</a>
          </td>
          <td>
            <a href="/client/update?id=@item.id" class="btn btn-primary">Update</a>
          </td>
          <td>
            <a href="/client/delete?id=@item.id" class="btn btn-danger" onclick="if (!confirm('Are you sure you want to delete this record?')) { return false }">Delete</a>
          </td>
        </tr>
    }
  </tbody>
</table>